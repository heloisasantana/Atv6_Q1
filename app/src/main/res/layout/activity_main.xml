<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Inputs para Professor Titular -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor Titular"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextAnosInstituicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Anos na Instituição"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextSalarioBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Salário Base"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonCalcularSalarioTitular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Salário Titular" />

    <TextView
        android:id="@+id/textViewSalarioTitular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salário Titular: "
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Inputs para Professor Horista -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor Horista"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextHorasAula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Horas de Aula"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextValorHoraAula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor por Hora de Aula"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonCalcularSalarioHorista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Salário Horista" />

    <TextView
        android:id="@+id/textViewSalarioHorista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salário Horista: "
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

</LinearLayout>
